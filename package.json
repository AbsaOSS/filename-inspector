{
  "name": "living-doc-generator",
  "version": "0.1.0",
  "dependencies": {
    "@actions/github": "^6.0.0",
    "@octokit/core": "^5.0.2",
    "@octokit/rest": "^20.0.2",
    "expect": "^29.7.0",
    "nock": "^13.5.0"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@types/jest": "^29.5.11",
    "@vercel/ncc": "^0.33.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  },
  "scripts": {
    "build": "ncc build index.js -o dist",
    "test": "jest --coverage"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.github/",
      "/__tests__/mocks/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
